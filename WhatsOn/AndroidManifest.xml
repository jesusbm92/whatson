<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.whatson"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.whatson.Index"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.whatson.About" android:theme="@android:style/Theme.Dialog" android:label="About"></activity>
        <activity android:name="com.example.whatson.UserLogin" android:theme="@android:style/Theme.Dialog" android:label="UserLogin"></activity>
        <activity android:name="com.example.whatson.Access" android:label="Access"></activity>
        <activity android:name="com.example.whatson.AnnouncerLogin" android:theme="@android:style/Theme.Dialog" android:label="AnnouncerLogin"></activity>
        <activity android:name="com.example.whatson.Register"></activity>
    </application>

</manifest>